<!DOCTYPE html>

<html>
<head>
	<title>Delivery Tracker</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">	
	<link href="Content/bootstrap.css" rel="stylesheet" type="text/css" />
	<link href="Content/bootstrap-responsive.css" rel="stylesheet" type="text/css" />
	<link href="Content/Site.css" rel="stylesheet" type="text/css" />
</head>
<body>
	<div class="container">
		
		@*<div id="loading" class="text-center"><img src="Images/loading.gif" alt="loading" /></div>*@
        <div data-bind="with: selectedPage">
		    <div data-bind="template: { name: template, data: data }"></div>
        </div>

		<script type="text/html" id="login">
			<form class="form-signin">
				<h2 class="form-signin-heading">Sign in</h2>
				Username:
				<input type="text" class="input-block-level" placeholder="Username" data-bind="value: UserName" />
				Password:
				<input type="password" class="input-block-level" placeholder="Password" data-bind="value: Password" />
				Truck:
				<select class="input-block-level" data-bind="value: Truck">
					<option>1</option>
					<option>2</option>
					<option>3</option>
				</select>
				<button class="btn btn-primary" type="submit">Sign in</button>
				<button class="btn" type="submit" data-bind="click: Register">New User?</button>
			</form>
		</script>

        <script type="text/html" id="register">
            <form class="form-signin">
				<h2 class="form-signin-heading">Register</h2>
				Username:
				<input type="text" class="input-block-level" placeholder="Username" data-bind="value: UserName" />
				Password:
				<input type="password" class="input-block-level" placeholder="Password" data-bind="value: Password" />
                Confirm Password:
                <input type="password" class="input-block-level" placeholder="Password" data-bind="value: PasswordConfirm" />
                Hint Question (Will be asked if you forget your password):
                <input type="text" class="input-block-level" placeholder="Hint Question" data-bind="value: HintQuestion" />
                Hint Answer:
                <input type="text" class="input-block-level" placeholder="Hint Answer" data-bind="value: HintAnswer" />
                <button class="btn btn-primary" type="submit">Register</button>
            </form>
        </script>

		<script type="text/html" id="passwordHint">
			<form class="form-signin">
				<h2 class="form-signin-heading">Reset Password</h2>
				<span data-bind="text: Hint"></span>?
				<input type="text" class="input-block-level" placeholder="Answer" />
				<button class="btn btn-primary" type="submit">Submit</button>
			</form>
		</script>
	</div>
</body>
<script src="Scripts/lib/jquery-1.9.1.min.js" type="text/javascript"></script>
